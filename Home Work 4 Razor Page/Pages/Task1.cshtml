@page
@model Home_Work_4.Pages.Task1

@{
    Layout = "_Layout";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link type="text/css" rel="stylesheet" href="css/task1.css">
    <title>Task 1</title>
</head>
<body>
<main>
    <div class="container__task1">
        <h2>Задача 1</h2>
        <div>Текущий день в году: @Model.DayOfYear</div>
        <div>Текущий Год: @Model.CurrentYear</div>
        <div>
            Высокосный ли год:
            @if (Model.IsLeapYear)
            {
                @:Высокосный
            }
            else
            {
                @:Не высокосный
            }
        </div>
    </div>
    <div class="container__task2">
        <h2>Задача 2</h2>
        <div>@Model.Phrase</div>
    </div>
</main>
</body>
</html>