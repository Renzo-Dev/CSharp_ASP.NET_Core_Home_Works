@page
@using Home_Work_7
@model Home_Work_7.Pages.Index

@{
    Layout = "_Layout";
}

<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="css/index.css" rel="stylesheet" type="text/css">
</head>
<body>
<div class="filter__panel">
    <form method="post">
        <button type="submit">Перезагрузить страницу</button>
    </form>
    <label>Время издания</label>
    <div class="YearRange">
        <input class="YearPublisher yearFrom" value="1700" type="number" placeholder="От"/>
        <input class="YearPublisher yearTo" value="2023" type="number" placeholder="До"/>
    </div>
</div>
<div class="content">
    <span class="header__books">Книги</span>
    <main class="books__library__container">
        @for (var i = 0; i < Books.books.Count; i++)
        {
            if (Model.YearFrom < Convert.ToInt32(Books.books[i].YearOfPublication) && Model.YearTo > Convert.ToInt32(Books.books[i].YearOfPublication))
            {
                <a class="book__wrapper">
                    <span class="book__name" name="book__name" title="@Books.books[i].Title">Название: @Books.books[i].Title</span>
                    <span class="book__Author" title="@Books.books[i].AuthorFullName">Автор: @Books.books[i].AuthorFullName</span>
                    <span class="book__publicationYear" title="@Books.books[i].YearOfPublication">Год издания: @Books.books[i].YearOfPublication</span>
                </a>
            }
        }
    </main>
</div>
<script src="script/ShowModal.js"></script>
</body>
</html>