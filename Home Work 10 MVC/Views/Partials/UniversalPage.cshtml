@using Home_Work_9_MVC.Models
@{
    var index = PageDataInfo.PageDataList.FindIndex(data => data.Name == ViewData["NamePage"]);
}

<link href="css/PageInfo.css" type="text/css" rel="stylesheet"/>
<div class="main__content">
    <h2>@PageDataInfo.PageDataList[index].Name</h2>
    <main>
        <div>@PageDataInfo.PageDataList[index].Description</div>
        <div class="main_features_title">Основные характеристики:</div>
        <div class="features_container">
            <ul>
                @for (var i = 0; i < PageDataInfo.PageDataList[index].Features.Count; i++)
                {
                    <li>@PageDataInfo.PageDataList[index].Features[i]</li>
                }
            </ul>
        </div>
    </main>
</div>